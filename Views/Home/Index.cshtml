<div class="container" style="margin-top:5em;">
    <div class="jumbotron">
        <h1>Home Page <img src="~/img/logo.png" height="50" width="50" /></h1>

        <div class="panel panel-primary" style="margin-top:2em; margin-bottom:2em;">
            <div class="panel-heading">
                <h3 class="panel-title">Site Message</h3>
            </div>
            <div class="panel-body" style="font-weight:bold;">
                @ViewBag.Message
            </div>
        </div>
        <p>
            <a href="/Brand" class="btn btn-primary">Start Shopping</a>
            @if (@SessionUtils.UserExists())
            {
                <a href="/Login/Logoff" class="btn btn-danger">Logoff</a>
            }
            else
            {
                <a href="/Login" class="btn btn-success">Login</a>
                <a href="/Register" class="btn btn-warning">Register</a>
            }


          
        </p>
    </div>
</div>

